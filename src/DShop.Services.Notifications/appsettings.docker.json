{
  "consul": {
    "url": "http://consul:8500",
    "service": "notifications-service",
    "address": "notifications-service",
    "port": "5003",
    "pingEnabled": false,
    "pingEndpoint": "ping",
    "pingInterval": 5,
    "removeAfterInterval": 10,
    "requestRetries": 3
  },
  "metrics": {
    "database": "dshop",
    "uri": "http://app-metrics:8086",
    "env": "docker",
    "interval": 5,
    "enabled": true
  },
  "mongo": {
    "connectionString": "mongodb://mongo:27017",
    "database": "dshop-notifications-service",
    "seed": false
  },
  "rawRabbit": {
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [ "rabbitmq" ],
    "requestTimeout": "00:00:10",
    "publishConfirmTimeout": "00:00:01",
    "recoveryInterval": "00:00:10",
    "persistentDeliveryMode": true,
    "autoCloseConnection": true,
    "automaticRecovery": true,
    "topologyRecovery": true,
    "exchange": {
      "durable": true,
      "autoDelete": false,
      "type": "Topic"
    },
    "queue": {
      "autoDelete": false,
      "durable": true,
      "exclusive": false
    }
  },
  "restEase": {
    "useConsul": false,
    "services": [
      {
        "name": "customers-service",
        "host": "customers-service",
        "scheme": "http",
        "port": "5001"
      }
    ]
  },
  "vault": {
    "enabled": false,
    "url": "http://vault:8200",
    "key": "notifications-service/options",
    "authType": "token",
    "token": "secret",
    "username": "user",
    "password": "secret"
  }
}